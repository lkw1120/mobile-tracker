<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/transactionitem_horizontal_gap_size"
    android:paddingEnd="@dimen/transactionitem_horizontal_gap_size"
    android:paddingTop="@dimen/transactionitem_vertical_gap_size"
    android:paddingBottom="@dimen/transactionitem_vertical_gap_size"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/transactionitem_txhash_size"
            android:layout_height="@dimen/transactionitem_txhash_size"
            android:background="@drawable/iconloop_icon"/>
        <TextView
            android:id="@+id/transactionitem_textview_txhash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transactionitem_txhash_size"
            android:textSize="@dimen/item_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="@dimen/transactionitem_title_size"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_text_size_small"
                android:text="@string/title_from"/>
            <TextView
                android:layout_width="@dimen/transactionitem_title_size"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_text_size_small"
                android:text="@string/title_to"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transactionitem_textview_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_text_size_small"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/transactionitem_textview_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_text_size_small"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>